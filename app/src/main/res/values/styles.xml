<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:backgroundTint">@color/btn_background</item>
        <item name="android:textColor">@color/button_number_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="OpButton" parent="CalcButton">
        <item name="android:backgroundTint">@color/operation_button_background</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="EqualsButton" parent="OpButton">
        <item name="android:backgroundTint">@color/btn_clear_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ClearButton" parent="OpButton">
        <item name="android:backgroundTint">@color/btn_clear_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>